        </div>
        <div class="p-6 rounded-lg border border-wise-interactive-secondary" style="background-color: var(--wise-disabled-background)">
          <span class="text-sm font-medium" style="color: var(--wise-disabled-text)">Disabled Background</span>
        </div>
      </div>
    </section>

  </div>

  <script src="script.js"></script>
</body>
