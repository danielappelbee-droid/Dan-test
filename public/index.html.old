    <!-- Form Inputs Section -->
    <section class="py-12 border-b border-wise-border-neutral">
      <h2 class="font-wise mb-8">Form Inputs</h2>
      <div class="space-y-6">
        <!-- Text Input -->
        <div class="form-group">
          <label class="form-label">Full Name</label>
          <input type="text" class="form-input" placeholder="Enter your full name">
        </div>

        <!-- Email Input -->
        <div class="form-group">
          <label class="form-label">Email Address</label>
          <input type="email" class="form-input" placeholder="Enter your email">
        </div>

        <!-- Password Input -->
        <div class="form-group">
          <label class="form-label">Password</label>
          <div class="relative">
            <input type="password" class="form-input pr-14" placeholder="Enter your password" data-password-input>
            <button type="button" class="password-toggle" data-password-toggle>
              <i data-lucide="eye" class="h-5 w-5"></i>
            </button>
          </div>
        </div>

        <!-- Select Dropdown -->
        <div class="form-group">
          <label class="form-label">Country</label>
          <div class="relative">
            <select class="form-input appearance-none pr-14">
              <option value="">Select a country</option>
              <option value="us">United States</option>
              <option value="uk">United Kingdom</option>
              <option value="ca">Canada</option>
              <option value="au">Australia</option>
            </select>
            <div class="select-chevron">
              <i data-lucide="chevron-down" class="h-5 w-5"></i>
            </div>
          </div>
        </div>

        <!-- Textarea -->
        <div class="form-group">
          <label class="form-label">Message</label>
          <textarea class="form-input" rows="4" placeholder="Enter your message"></textarea>
        </div>
      </div>
    </section>

    <!-- Toggles Section -->
    <section class="py-12 border-b border-wise-border-neutral">
      <h2 class="font-wise mb-8">Toggles & Switches</h2>
      <div class="space-y-6">
        <!-- Switches -->
        <div class="mb-8">
          <h3 class="text-lg font-medium mb-6">Switches</h3>
          <div class="space-y-4">
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-wise-content-primary">Email notifications</span>
              <label class="switch">
                <input type="checkbox" class="switch-checkbox" checked>
                <span class="switch-slider"></span>
              </label>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-wise-content-primary">SMS notifications</span>
              <label class="switch">
                <input type="checkbox" class="switch-checkbox">
                <span class="switch-slider"></span>
              </label>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-wise-content-primary">Push notifications</span>
              <label class="switch">
                <input type="checkbox" class="switch-checkbox" checked>
                <span class="switch-slider"></span>
              </label>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-wise-content-primary">Disabled switch</span>
              <label class="switch">
                <input type="checkbox" class="switch-checkbox" disabled>
                <span class="switch-slider"></span>
              </label>
            </div>
          </div>
        </div>

        <!-- Checkboxes -->
        <div class="mb-8">
          <h3 class="text-lg font-medium mb-6">Checkboxes</h3>
          <div class="space-y-3">
            <label class="flex items-center gap-3 cursor-pointer">
              <input type="checkbox" class="checkbox-input w-5 h-5" checked>
              <span class="text-sm text-wise-content-secondary">I agree to the terms and conditions</span>
            </label>
            <label class="flex items-center gap-3 cursor-pointer">
              <input type="checkbox" class="checkbox-input w-5 h-5">
              <span class="text-sm text-wise-content-secondary">Subscribe to newsletter</span>
            </label>
            <label class="flex items-center gap-3 cursor-pointer">
              <input type="checkbox" class="checkbox-input w-5 h-5" checked>
              <span class="text-sm text-wise-content-secondary">Remember me</span>
            </label>
          </div>
        </div>

        <!-- Radio Buttons -->
        <div>
          <h3 class="text-lg font-medium mb-6">Radio Buttons</h3>
          <div class="space-y-3">
            <label class="flex items-center gap-3 cursor-pointer">
              <input type="radio" name="payment" class="radio-input w-5 h-5" checked>
              <span class="text-sm text-wise-content-secondary">Credit Card</span>
            </label>
            <label class="flex items-center gap-3 cursor-pointer">
              <input type="radio" name="payment" class="radio-input w-5 h-5">
              <span class="text-sm text-wise-content-secondary">Bank Transfer</span>
            </label>
            <label class="flex items-center gap-3 cursor-pointer">
              <input type="radio" name="payment" class="radio-input w-5 h-5">
              <span class="text-sm text-wise-content-secondary">PayPal</span>
            </label>
          </div>
        </div>
      </div>
    </section>

