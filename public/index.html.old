            <div class="w-10 h-10 rounded-lg mb-2 bg-wise-interactive-accent"></div>
            <span class="text-xs text-wise-interactive-primary">Accent</span>
          </div>
          <div class="flex flex-col items-center p-4 rounded-lg bg-wise-interactive-neutral">
            <div class="w-10 h-10 rounded-lg mb-2 bg-wise-interactive-neutral"></div>
            <span class="text-xs text-wise-interactive-primary">Neutral</span>
          </div>
          <div class="flex flex-col items-center p-4 rounded-lg bg-wise-interactive-secondary">
            <div class="w-10 h-10 rounded-lg mb-2 bg-wise-interactive-secondary"></div>
            <span class="text-xs text-wise-base-light">Secondary</span>
          </div>
        </div>
      </div>

      <!-- Brand Colors -->
      <div class="mb-8">
        <h3 class="text-lg font-medium mb-6">Brand Colors</h3>
        <div class="grid grid-cols-4 gap-6">
          <div class="flex flex-col items-center p-4 rounded-lg bg-wise-green-bright">
            <div class="w-10 h-10 rounded-lg mb-2 bg-wise-green-bright"></div>
            <span class="text-xs text-wise-interactive-primary">Bright Green</span>
          </div>
          <div class="flex flex-col items-center p-4 rounded-lg bg-wise-green-forest">
            <div class="w-10 h-10 rounded-lg mb-2 bg-wise-green-forest"></div>
            <span class="text-xs text-wise-base-light">Forest Green</span>
          </div>
          <div class="flex flex-col items-center p-4 rounded-lg bg-wise-orange-bright">
            <div class="w-10 h-10 rounded-lg mb-2 bg-wise-orange-bright"></div>
            <span class="text-xs">Orange</span>
          </div>
          <div class="flex flex-col items-center p-4 rounded-lg bg-wise-yellow-bright">
            <div class="w-10 h-10 rounded-lg mb-2 bg-wise-yellow-bright"></div>
            <span class="text-xs">Yellow</span>
          </div>
        </div>
      </div>

      <!-- Sentiment Colors -->
      <div>
        <h3 class="text-lg font-medium mb-6">Sentiment Colors</h3>
        <div class="grid grid-cols-3 gap-6">
          <div class="flex flex-col items-center p-4 rounded-lg bg-wise-sentiment-positive">
            <div class="w-10 h-10 rounded-lg mb-2 bg-wise-sentiment-positive"></div>
            <span class="text-xs text-wise-base-light">Positive</span>
          </div>
          <div class="flex flex-col items-center p-4 rounded-lg bg-wise-sentiment-warning">
            <div class="w-10 h-10 rounded-lg mb-2 bg-wise-sentiment-warning"></div>
            <span class="text-xs">Warning</span>
          </div>
          <div class="flex flex-col items-center p-4 rounded-lg bg-wise-sentiment-negative">
            <div class="w-10 h-10 rounded-lg mb-2 bg-wise-sentiment-negative"></div>
            <span class="text-xs text-wise-base-light">Negative</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Background Examples -->
    <section class="py-12">
      <h2 class="font-wise mb-8">Background Examples</h2>
      <div class="space-y-6">
        <div class="p-6 bg-wise-background-screen rounded-lg border border-wise-interactive-secondary">
          <span class="text-sm font-medium">Screen Background</span>
        </div>
        <div class="p-6 bg-wise-background-elevated rounded-lg border border-wise-interactive-secondary">
          <span class="text-sm font-medium">Elevated Background</span>
        </div>
        <div class="p-6 bg-wise-background-neutral rounded-lg border border-wise-interactive-secondary">
